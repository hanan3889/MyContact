<Window x:Class="MyContact.View.SitesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion des Sites" Height="450" Width="600">
    <Grid Margin="10">
        <StackPanel>
            <Button Content="Ajouter un site" Background="#339c33" Foreground="White" FontSize="16" Margin="10"
                    HorizontalAlignment="Left" Click="AddSiteButton_Click"/>

            <DataGrid x:Name="SitesDataGrid" AutoGenerateColumns="False" CanUserAddRows="False"
                      ItemsSource="{Binding Sites}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Nom du site" Binding="{Binding Ville}" Width="*"/>
                    <DataGridTemplateColumn Header="Actions">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Modifier" Margin="2" Click="EditSiteButton_Click"/>
                                    <Button Content="Supprimer" Margin="2" Click="DeleteSiteButton_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
