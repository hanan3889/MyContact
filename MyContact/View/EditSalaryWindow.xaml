<Window x:Class="MyContact.View.EditSalaryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modifier Salarié"
        Height="300" Width="400"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Nom :" Grid.Row="0" FontSize="14" FontWeight="Bold"/>
        <TextBox Text="{Binding Salary.Nom, UpdateSourceTrigger=PropertyChanged}"
                 Grid.Row="0" Margin="80,0,0,5"
                  />

        <TextBlock Text="Prénom :" Grid.Row="1" FontSize="14" FontWeight="Bold"/>
        <TextBox Text="{Binding Salary.Prenom, UpdateSourceTrigger=PropertyChanged}"
                 Grid.Row="1" Margin="80,0,0,5"
                />

        <TextBlock Text="Tél Fixe :" Grid.Row="2" FontSize="14" FontWeight="Bold"/>
        <TextBox Text="{Binding Salary.TelephoneFixe, UpdateSourceTrigger=PropertyChanged}"
                 Grid.Row="2" Margin="80,0,0,5"
                  />

        <TextBlock Text="Tél Portable :" Grid.Row="3" FontSize="14" FontWeight="Bold"/>
        <TextBox Text="{Binding Salary.TelephonePortable, UpdateSourceTrigger=PropertyChanged}"
                 Grid.Row="3" Margin="80,0,0,5" />

        <TextBlock Text="Email :" Grid.Row="4" FontSize="14" FontWeight="Bold"/>
        <TextBox Text="{Binding Salary.Email, UpdateSourceTrigger=PropertyChanged}"
                 Grid.Row="4" Margin="80,0,0,5" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="5" Margin="0,10,0,0">
            <Button Content="Annuler"
                    Width="80"
                    Margin="5"
                    Command="{Binding CancelCommand}"
                    Background="#ff0000"
                    Foreground="White"/>
            <Button Content="Enregistrer"
                    Width="100"
                    Margin="5"
                    Command="{Binding SaveCommand}"
                    Background="#339c33"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
