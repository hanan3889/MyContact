<Window x:Class="MyContact.Views.SearchSalaryByServiceView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rechercher un salarié par service" Height="400" Width="500">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Liste déroulante pour sélectionner un service -->
        <TextBlock Text="Nom du service:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <ComboBox x:Name="ServiceComboBox" Width="200" ItemsSource="{Binding Services}"
                  DisplayMemberPath="Nom" SelectedItem="{Binding SelectedService, Mode=TwoWay}"
                  Grid.Column="1" Margin="0,0,10,0"/>

        <!-- Bouton de recherche -->
        <Button Content="Rechercher" Grid.Row="1" Grid.ColumnSpan="2" 
                Command="{Binding SearchCommand}" Margin="0,10,0,0" Background="#339c33"/>

        <!-- Zone de message -->
        <TextBlock Grid.Row="2" Grid.ColumnSpan="2" Text="{Binding ResultText}" 
                   Foreground="Green" TextWrapping="Wrap" HorizontalAlignment="Center"
                   Margin="0,5,0,5" FontWeight="Bold"/>

        <!-- DataGrid pour afficher les résultats -->
        <DataGrid Grid.Row="3" Grid.ColumnSpan="2" ItemsSource="{Binding Salaries}" AutoGenerateColumns="False"
                  HeadersVisibility="Column" IsReadOnly="True" VerticalScrollBarVisibility="Auto"
                  Background="White">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" Width="*" />
                <DataGridTextColumn Header="Prénom" Binding="{Binding Prenom}" Width="*" />
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*" />
                <DataGridTextColumn Header="Fixe" Binding="{Binding TelephoneFixe}" Width="*" />
                <DataGridTextColumn Header="Portable" Binding="{Binding TelephonePortable}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
